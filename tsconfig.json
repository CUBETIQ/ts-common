{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "lib": ["ES2015"],
        "skipLibCheck": true,
        "allowJs": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}
